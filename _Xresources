URxvt.intensityStyles:      false
URxvt.externalBorder:       0px
! URxvt.letterSpace: -1

Xft.dpi:                        96
Xft.antialias:                  1
Xft.autohint:                   0
Xft.hinting:                    1
Xft.hintstyle:                  hintslight

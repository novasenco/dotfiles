! fix ctrl-arrow (in, eg, vim :terminal)
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C


! disable the stupid ctrl+shift 'feature'
URxvt.iso14755:     false
URxvt.iso14755_52:  false

! perl extensions
URxvt.perl-ext-common:  default,matcher,clipboard,keyboard-select,url-select,font-size,fullscreen

! first click opens url
URxvt.matcher.button:   1

! copy paste
URxvt.clipboard.autocopy:   true
URxvt.clipboard.copycmd:    xsel -ib
URxvt.clipboard.pastecmd:   xsel -ob
URxvt.keysym.Shift-Control-V:   perl:clipboard:paste
URxvt.keysym.Shift-Control-C:   perl:clipboard:copy

! kbd-based selection/search
URxvt.keyboard-select.clipboard: true
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.url-select.autocopy:  false
URxvt.url-select.launcher:  xdg-open

URxvt.keysym.M-K:   font-size:increase
URxvt.keysym.M-J:   font-size:decrease
URxvt.keysym.M-I:   font-size:reset
URxvt.keysym.M-O:   font-size:show

URxvt.keysym.M-F: perl:fullscreen:switch

